<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/output.css">
    <link rel="stylesheet" href="/css/custom.css">
    <link rel="stylesheet" href="/css/fontawesome-pro/css/all.min.css">
    <script src="/js/main.js" defer></script> 
</head>
<body class="bg-gray-100">
    <!-- Messages Div -->
    <div class="fixed top-5 z-50 w-full flex justify-center">
        <div id="messages" class="text-base w-full max-w-2xl">
            <% if (successMessage) { %>
                <div class="text-green-600 bg-green-300 p-4 text-center rounded-md"><%= successMessage %></div>
            <% } %>
            <% if (errorMessage) { %>
                <div class="text-red-600 bg-red-300 p-4 text-center rounded-md"><%= errorMessage %></div>
            <% } %>
        </div>
    </div>
    <div class="w-full h-lvh flex flex-col">
        <!-- Dashboard Content Here -->
         <!-- Header -->
         <div class="flex justify-between items-center bg-red-600 p-5 sticky top-0">
            <div>
                <h1 class="text-white font-bold text-2xl">Malawi Post Corporation</h1>
            </div>
            <div class="flex items-center gap-5 ">
                <i class="fa-duotone fa-solid fa-user text-2xl text-white cursor-pointer"></i>
                <h1 class="text-white cursor-pointer font-bold"><%= user.first_name %> <%= user.last_name %></h1>
                <a href="/auth/logout"><i class="fa-duotone fa-solid fa-right-from-bracket text-2xl text-white cursor-pointer"></i></a>
            </div>
         </div>
         <!-- Main Container -->
          <div class="flex flex-1">
            <div class="w-1/4 max-w-72 bg-gray-700 flex flex-col">
                <div class="flex gap-3 items-center justify-start p-5 bg-red-500 border-b">
                    <a href="dashboard"><i class="fa-sharp-duotone fa-solid fa-gauge text-2xl text-white"></i></a>
                    <a href="dashboard" class="text-xl text-white cursor-pointer">Dashboard</a>
                </div>

                <div class="flex gap-3 items-center justify-start p-5 border-b">
                    <a href="branches"><i class="fa-thin fa-building text-2xl text-white"></i></a>
                    <a href="braches" class="text-xl text-white cursor-pointer">Branches</a>
                </div>

                <div class="flex gap-3 items-center justify-start p-5 border-b">
                    <a href="sending"><i class="fa-thin fa-share-from-square text-2xl text-white"></i></a>
                    <a href="sending" class="text-xl text-white cursor-pointer">Sending</a>
                </div>
                
                <div class="flex gap-3 items-center justify-start p-5 border-b">
                    <a href="collecting"><i class="fa-light fa-box text-2xl text-white"></i></a>
                    <a href="collecting" class="text-xl text-white cursor-pointer">Collecting</a>
                </div>

                <div class="flex gap-3 items-center justify-start p-5 border-b">
                    <a href="devices"><i class="fa-thin fa-tablet-rugged text-2xl text-white"></i></a>
                    <a href="devices" class="text-xl text-white cursor-pointer">Tracking Devices</a>
                </div>

                <div class="flex gap-3 items-center justify-start p-5 border-b">
                    <a href="vehicles"><i class="fa-thin fa-truck text-2xl text-white"></i></a>
                    <a href="vehicles" class="text-xl text-white cursor-pointer">Vehicles</a>
                </div>
                
            </div>
            <div class="flex-1">
                <div class="bg-gray-300 p-5 text-red-600 font-bold text-xl">Dashboard</div>

                <!-- Dashboard Cards -->
                <div class="p-5">
                    <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-4 mt-5">
                        <!-- Card 1 -->
                        <div class="bg-white p-6 rounded-lg shadow-md flex flex-col items-start">
                            <i class="fa-thin fa-box text-3xl text-red-600"></i>
                            <p class="text-4xl font-bold mt-2">123</p>
                            <p class="text-gray-600 mt-1 text-left">Total Parcels</p>
                        </div>

                        <!-- Card 2 -->
                        <div class="bg-white p-6 rounded-lg shadow-md flex flex-col items-start">
                            <i class="fa-thin fa-truck text-3xl text-red-600"></i>
                            <p class="text-4xl font-bold mt-2">45</p>
                            <p class="text-gray-600 mt-1 text-left">Active Vehicles</p>
                        </div>

                        <!-- Card 3 -->
                        <div class="bg-white p-6 rounded-lg shadow-md flex flex-col items-start">
                            <i class="fa-thin fa-building text-3xl text-red-600"></i>
                            <p class="text-4xl font-bold mt-2">10</p>
                            <p class="text-gray-600 mt-1 text-left">Branches</p>
                        </div>

                        <!-- Card 4 -->
                        <div class="bg-white p-6 rounded-lg shadow-md flex flex-col items-start">
                            <i class="fa-thin fa-users text-3xl text-red-600"></i>
                            <p class="text-4xl font-bold mt-2">58</p>
                            <p class="text-gray-600 mt-1 text-left">Staff Members</p>
                        </div>

                        <!-- Card 5 -->
                        <div class="bg-white p-6 rounded-lg shadow-md flex flex-col items-start">
                            <i class="fa-thin fa-share-from-square text-3xl text-red-600"></i>
                            <p class="text-4xl font-bold mt-2">32</p>
                            <p class="text-gray-600 mt-1 text-left">Parcels Sent</p>
                        </div>

                        <!-- Card 6 -->
                        <div class="bg-white p-6 rounded-lg shadow-md flex flex-col items-start">
                            <i class="fa-thin fa-box-open text-3xl text-red-600"></i>
                            <p class="text-4xl font-bold mt-2">20</p>
                            <p class="text-gray-600 mt-1 text-left">Parcels Collected</p>
                        </div>
                    </div>
                </div>
            </div>
          </div>
    </div>
</body>
</html>